<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/linearLayoutFpromosVList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/podcast_lib_item_image_view"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher_video_lib" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/podcast_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/author_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/btn_launcher_play_image_view"
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:contentDescription="@string/txt_tbl_feature_list_video_alt1"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:src="@mipmap/ic_launcher_play" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>