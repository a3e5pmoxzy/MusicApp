<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.podcastapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TrendingNowVActivity"
            android:label="@string/cat_video_trendingnow" />
        />
        <activity
            android:name=".NewVActivity"
            android:label="@string/cat_video_new" />
        <activity
            android:name=".TopAudioVActivity"
            android:label="@string/cat_video_top_audio" />
    </application>

</manifest>